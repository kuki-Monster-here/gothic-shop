    <script>
        // 5.1 –í—ã–±–æ—Ä –æ–ø—Ü–∏–π (—Ü–≤–µ—Ç–∞ –∏ —Ä–∞–∑–º–µ—Ä–∞)
        const options = document.querySelectorAll('.option');
        
        options.forEach(option => {
            option.addEventListener('click', function() {
                // –£–±–∏—Ä–∞–µ–º –≤—ã–¥–µ–ª–µ–Ω–∏–µ —É –≤—Å–µ—Ö –æ–ø—Ü–∏–π –≤ —ç—Ç–æ–π –≥—Ä—É–ø–ø–µ
                const parent = this.parentElement;
                const siblings = parent.querySelectorAll('.option');
                siblings.forEach(sib => sib.classList.remove('selected'));
                
                // –î–æ–±–∞–≤–ª—è–µ–º –≤—ã–¥–µ–ª–µ–Ω–∏–µ —Ç–µ–∫—É—â–µ–π –æ–ø—Ü–∏–∏
                this.classList.add('selected');
            });
        });

        // 5.2 –û–±—Ä–∞–±–æ—Ç–∫–∞ –∫–Ω–æ–ø–∫–∏ –¥–æ–±–∞–≤–ª–µ–Ω–∏—è –≤ –∫–æ—Ä–∑–∏–Ω—É
        const addButton = document.querySelector('.blood-button');
        addButton.addEventListener('click', function() {
            const selectedColor = document.querySelector('.option-group:nth-child(1) .selected').textContent;
            const selectedSize = document.querySelector('.option-group:nth-child(2) .selected').textContent;
            
            alert(`ü¶á Added to Cauldron:\nColor: ${selectedColor}\nSize: ${selectedSize}\n\nThe ancient spirits have heard your call!`);
        });
    </script>
